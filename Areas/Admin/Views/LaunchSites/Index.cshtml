@model IEnumerable<Tuple<LunarSports.Models.EventLocation, LunarSports.Models.LaunchSite>>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table-responsive">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Item2.Location)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Item2.Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Item1.LocationName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Item2.Description)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Item2.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Item2.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Item2.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
