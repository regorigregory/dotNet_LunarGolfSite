@model IEnumerable<LunarSports.Models.Page>
    <ul class="nav">
        <li class="nav-link">
            <a asp-controller="Default" asp-action="Home">Home</a>
        </li>
        <li class="nav-link">
            <a asp-area="" asp-controller="Default" asp-action="Events">Events</a>
        </li>


        @foreach (Page p in Model)
        {
            <li class="nav-link">
                <a asp-area="" asp-controller="Pages" asp-action="Details" asp-route-id="@p.ID">@p.Title</a>
            </li>
        }
        <hr/>
        @if (User.IsInRole("Administrator"))
        {
            foreach(var menuEntry in ViewBag.adminMenuEntries)
            {
                <li class="nav-link">
                    <a asp-area="Admin" asp-controller="@menuEntry.Controller" asp-action="@menuEntry.Action" >@menuEntry.DisplayName </a>

                </li>
            }
        }
    </ul>
